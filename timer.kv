# Custom button
<CustButton@Button>:
	font_size: 32

# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<TimerGridLayout>:
    id: timer
    padding: 10
	spacing: 10
    rows: 2

    BoxLayout:
        Label:
            font_size: 32
            text: timer.now()

    BoxLayout:
        spacing: 10
        CustButton:
            text: "start"
			on_press: timer.start()
        CustButton:
            text: "stop"
			on_press: timer.stop()
        CustButton:
            text: "pause"


